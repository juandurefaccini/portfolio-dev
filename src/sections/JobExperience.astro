---
import { Icon } from "astro-icon/components";
import Section from "../components/Section.astro";
import SectionTitle from "../components/SectionTitle.astro";
import { experience } from "../data/resumeData";

type JobExperienceDetail = {
  title: string;
  description: string;
  link?: string;
  technologies?: string[];
  tags?: string[];
};

type JobExperience = {
  title: string;
  period: string;
  details: JobExperienceDetail[];
};
---

<Section id="experiencia">
  <SectionTitle title="Experiencia Profesional" />

  <div class="relative">
    <div class="absolute left-8 top-0 h-full w-0.5 bg-gray-200 md:left-1/2">
    </div>

    {
      experience.map((job, index) => (
        <div class="mb-16 md:flex md:items-start" data-aos="fade-up">
          <div class="relative mb-8 md:mb-0 md:w-1/2 md:pr-8 md:text-right">
            <div
              class="sticky top-4 bg-violet-50 py-4"
              data-aos="fade-right"
              data-aos-delay="100"
            >
              <h3 class="text-2xl font-semibold text-gray-800">{job.title}</h3>
              <p class="text-sm text-gray-600">{job.period}</p>
            </div>
          </div>

          <div class="relative md:w-1/2 md:pl-8">
            <div class="hidden md:block absolute -left-4 top-0 h-8 w-8 rounded-full bg-violet-500 md:left-[-16px] md:top-4" />
            {job.details.map((detail, detailIndex) => (
              <div
                class="mb-6 rounded-lg bg-white p-6 shadow-lg transition-all duration-300 hover:shadow-xl"
                data-aos="fade-left"
                data-aos-delay={200 + detailIndex * 100}
              >
                <div class="mb-4 flex items-start justify-between">
                  <div>
                    <h4 class="text-xl font-bold text-gray-800">
                      {detail.title}
                    </h4>
                    {detail.technologies && (
                      <div class="mt-2 flex flex-wrap gap-2">
                        {detail.technologies.map((tech) => (
                          <span class="inline-flex items-center rounded-full bg-violet-100 px-2.5 py-0.5 text-xs font-medium text-violet-800">
                            {tech}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                  {detail.link && (
                    <a
                      href={detail.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-violet-600 hover:text-violet-800"
                    >
                      <Icon name="mdi:external-link" class="h-6 w-6" />
                    </a>
                  )}
                </div>
                <p class="mb-4 text-gray-600">{detail.description}</p>
                {detail.tags && (
                  <ul class="flex flex-wrap gap-x-4 gap-y-2">
                    {detail.tags.map((tag) => (
                      <li class="inline-flex items-center text-sm text-gray-500">
                        <span class="mr-1.5 h-1.5 w-1.5 rounded-full bg-gray-500" />
                        {tag}
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</Section>
