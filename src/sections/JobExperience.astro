---

<section class="my-8">
  <h2 class="text-3xl font-semibold mb-6 text-center text-gray-800">
    Experiencia Profesional
  </h2>

  <div class="flex flex-col gap-4">
    {
      jobExperiences.map((jobExperience) => (
        <div class="bg-gray-50 p-4 rounded-lg shadow-sm">
          <h3 class="text-lg font-semibold mb-1 text-gray-700">
            {jobExperience.title}
          </h3>
          <p class="text-sm text-gray-500 mb-2">{jobExperience.period}</p>
          <div class="grid grid-cols-1 gap-2">
            {jobExperience.details.map((detail) => (
              <div class="bg-white p-3 rounded-lg border border-gray-200">
                <h4 class="text-md font-medium mb-1 text-gray-700">
                  {detail.title}
                </h4>
                <p class="text-sm text-gray-500">{detail.description}</p>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>
